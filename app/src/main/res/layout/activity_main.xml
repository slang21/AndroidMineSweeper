<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/welcomeMessage"
        android:textSize="26sp"
        android:textColor="#854C63"
        android:layout_gravity="center"/>


    <com.spencer.minesweeper.View.MinesweeperView
        android:layout_marginTop="20dp"
        android:id="@+id/minView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <Button
            android:layout_gravity="center"
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Erase"></Button>

        <ToggleButton
            android:layout_gravity="center"
            android:id="@+id/flagToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textOff="Turn on Flag"
            android:textOn="Turn off Flag"></ToggleButton>
    </LinearLayout>

</LinearLayout>